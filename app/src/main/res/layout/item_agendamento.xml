<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:elevation="3dp"
    android:background="#FFFFFF"
    android:foreground="?android:attr/selectableItemBackground"
    android:clickable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtTipo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="🩺 Consulta"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#222222" />

            <ImageView
                android:id="@+id/btnExcluir"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_delete"
                android:contentDescription="Excluir agendamento"
                android:background="?attr/selectableItemBackgroundBorderless" />
        </LinearLayout>

        <TextView
            android:id="@+id/txtTipoDescricao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="🗒️ Retorno clínico"
            android:textSize="15sp"
            android:textColor="#444444"
            android:layout_marginTop="2dp" />

        <TextView
            android:id="@+id/txtData"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="📅 26/07/2025 (sábado)"
            android:textSize="15sp"
            android:textColor="#222222"
            android:layout_marginTop="4dp" />

        <TextView
            android:id="@+id/txtHorario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="⏰ 15:00"
            android:textSize="15sp"
            android:textColor="#222222"
            android:layout_marginTop="2dp" />

        <TextView
            android:id="@+id/txtLocal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="📍 Clínica São Paulo"
            android:textSize="15sp"
            android:textColor="#222222"
            android:layout_marginTop="4dp" />

        <Button
            android:id="@+id/btnEditar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Editar"
            android:textColor="#FFFFFF"
            android:background="@drawable/bg_btn_transparente"
            android:layout_marginTop="12dp"
            android:paddingHorizontal="12dp"
            android:textAllCaps="false" />
    </LinearLayout>
</androidx.cardview.widget.CardView>